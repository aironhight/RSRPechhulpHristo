<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:alpha="0.12"
    android:background="@drawable/popup_bg"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:text="@string/map_info_window_title"
        android:textStyle="bold"
        android:textColor="@color/whiteText"
        android:textSize="@dimen/info_window_title_text_size"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressInfoTextView"
        android:textColor="@color/whiteText"
        android:textAlignment="center"
        android:layout_marginVertical="7dp"
        android:padding="@dimen/info_window_text_padding"
        android:text="@string/map_info_window_obtaining_address"
        android:inputType="textMultiLine"
        android:minLines="2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteText"
        android:padding="@dimen/info_window_text_padding"
        android:text="@string/map_info_window_text"
        android:textAlignment="center" />

</LinearLayout>
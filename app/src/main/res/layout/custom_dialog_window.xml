<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:id="@+id/dialog_panel"
    android:visibility="gone">

        <!-- Close button with text -->
    <RelativeLayout
        android:id="@+id/btn_map_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/main_btn_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Annuleren"
            android:textColor="@color/whiteText" />

    </RelativeLayout>
        <!-- End of  close button -->


        <!-- Text field  + Button-->
    <RelativeLayout
        android:layout_below="@id/btn_map_close_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@color/yellowBG"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/dialog_window_frame">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belkosten"
            android:textAlignment="center"
            android:textColor="@color/whiteText"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:paddingVertical="20dp"
            android:text="@string/charging_rate_info"
            android:textAlignment="center"
            android:textColor="@color/whiteText" />

        <!--Button layout-->
        <RelativeLayout
            android:id="@+id/activity_map_btn-call_confirmed"
            style="@style/mainButton"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:alpha="1"
            android:background="@drawable/main_btn_bg"
            android:clickable="true">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:src="@drawable/map_btn_phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_btn_popup_call"
                android:textColor="@color/whiteText" />
        </RelativeLayout>
        <!--End of button layout-->
    </RelativeLayout>
        <!--End of text field-->

</RelativeLayout>





